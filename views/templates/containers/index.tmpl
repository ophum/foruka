{{ define "containers/index.tmpl" }}
<html>
<head>
    <meta charset="utf-8">
    <title>foruka</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css" type="text/css">
</head>
<body>
  <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <div class="navbar-item">foruka</div>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <a class="button" href="/containers/create">
              <span>
                create
              </span>
            </a>
          </p>
          <p class="control">
            <a class="button" href="/logout">
              <span>
                logout
              </span>
            </a>
          </p>

        </div>
      </div>
    </div>
  </nav>

  <div class="container">
		<table class="table is-hoverable">
		<thead>
		<tr><th>Name</th></tr>
		</thead>
 		{{range .containers}}
		<tr><td>{{.Name}}</td></tr>
		{{end}}		   
		</table>
  </div>
</body>
</html>
{{ end }}
